	<security:http>
		<security:form-login/>
		<security:http-basic/>
		<security:logout/>
		<security:intercept-url pattern="/**" access="ROLE_ADMIN" />
		<security:intercept-url pattern="/post/**" access="ROLE_ADMIN, ROLE_MEMBER" />
		<security:intercept-url pattern="/read/**" access="ROLE_ADMIN, ROLE_MEMBER, ROLE_GUEST" />
		<security:access-denied-handler error-page="/WEB-INF/jsp/error/notAuthorization.jsp"/>
		
		<security:session-management invalid-session-url="/WEB-INF/jsp/error/invalidSession.jsp">
			<security:concurrency-control max-sessions="1"/>
		</security:session-management>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider ref="customAuthenticationProvider">
		</security:authentication-provider>
	</security:authentication-manager>
	
	<bean id="customAuthenticationProvider" class="com.oskm.security.CustomAuthenticationProvider" >
	
	</bean>
	<bean id="mySpecialAuthenticationFilter" class="com.oskm.filter.MySpecialAuthenticationFilter" />
	
